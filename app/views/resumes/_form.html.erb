<%= form_for @resume do |f| %>
    <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :experience %>
        <%= f.number_field :experience, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :salary %>
        <%= f.number_field :salary, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :employment_type %>
        <%= f.text_field :employment_type, class: 'form-control' %>
    </div>
    <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to "Cancel", :back, {:class=>"btn btn-primary"} %>
<% end %>